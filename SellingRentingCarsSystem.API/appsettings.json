{
  "ConnectionStrings": {
    "DefaultConnections": "Server=.;Database=Sellin_Renting_Vehicles_System;Integrated Security=SSPI;TrustServerCertificate=True",
    "JobsDatabase": "Server=.;Database=SyriaNewsJobs;Integrated Security=SSPI;TrustServerCertificate=True"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "SellingRentingCarsSystem.API.Controllers.AuthController": "Information",
        "SellingRentingCarsSystem.API.Implementations": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "Path": "Logs\\log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "ApplicationName": "EagleForCarsTrading"
    }
  },
  "AllowedHosts": "*",
  "AllowedOrigins": [
    "https://www.Renting-Selling-Cars.com"
  ],
  "Jwt": {
    "Key": "",
    "Issure": "Al-Saleh Cars",
    "Audience": "Al-Saleh Users",
    "ExpireMinutes": 30
  },
  "Images": {
    "MaxSizeInByte": 16777216, //16MB
    "MinSizeInByte": 1024, //1 KB
    "Path": "wwwroot\\Vehicles Images",
    "AllowedExtensions": ".jpg;.jpeg;.png"
  },
  "Email_Configurations": {
    "Email": "",
    "Password": "",
    "Host": "smtp.gmail.com",
    "Port": 587
  },
  "HangfireSettings": {
    "Username": "",
    "Password": ""
  }
}